generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model cafes {
  id   Int       @id @default(autoincrement())
  cafename String    @db.VarChar(255) @unique
  address  String?   @db.VarChar(255)
  offday   String?   @db.VarChar(255)
  imageurl String?   @db.VarChar(255)
  reviews  reviews[]
}

model reviews {
  id Int     @id @default(autoincrement())
  comments      String?
  withPowerPlug Boolean  @default(true)
  imageurl      String?
  USP           String?
  coffeeTexture String?
  coffeeBody    String?
  coffeeAftertaste  String?
  drinkName String?
  drinkPrice  Float
  originBlend   String?
  datetime      DateTime @default(now()) @updatedAt
  cafeid   Int
  userid   Int
  cafes    cafes?  @relation(fields: [cafeid], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users    users?  @relation(fields: [userid], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model users {
  id   Int       @id @default(autoincrement())
  username String?   @db.VarChar(255) @unique
  password String?   @db.VarChar(255)
  name     String?   @db.VarChar(255)
  reviews  reviews[]
}
